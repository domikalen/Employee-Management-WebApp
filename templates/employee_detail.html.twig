{% extends 'layout.html.twig' %}

{% block title %}Detail zaměstnance{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/css/employee_detail.css">
{% endblock %}

{% block content %}
    {% if employee %}
        <section>
            <img src="{{ employee.image }}" alt="{{ employee.name }}" width="200">
            <h2>{{ employee.name }}</h2>
            <p><strong>Funkce:</strong> {{ employee.role }}</p>
            <p><strong>Kontaktní údaje:</strong> {{ employee.phone }}, {{ employee.email }}</p>
            <h3>Popis:</h3>
            <p>{{ employee.description }}</p>
        </section>
        <button onclick="location.href='?page=employee_accounts&id={{ employee.id }}'">Účty zaměstnance</button>
    {% else %}
        <p>Employee data is missing.</p>
    {% endif %}
{% endblock %}
