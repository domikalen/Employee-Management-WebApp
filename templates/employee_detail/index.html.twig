{% extends 'layout.html.twig' %}

{% block title %}Employee Details{% endblock %}

{% block content %}
    <section class="employee-detail">
        <div class="employee-detail-container">
            <div class="employee-image-container">
                {% if employee.image %}
                    <img src="{{ employee.image }}" alt="{{ employee.name }}" class="employee-image">
                {% else %}
                    <img src="{{ asset('images/new_user.png') }}" alt="Default Image" class="employee-image">
                {% endif %}
            </div>
            <div class="employee-info-container">
                <h2>{{ employee.name }}</h2>
                <p><strong>Roles:</strong>
                    {% for role in employee.roles %}
                        {{ role.title }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                </p>
                <p><strong>Role Description:</strong>
                    {% for role in employee.roles %}
                        {{ role.description }}{% if not loop.last %}; {% endif %}
                    {% endfor %}
                </p>
                <p><strong>Contact:</strong> {{ employee.phone }}, {{ employee.email }}</p>
                <h3>Description:</h3>
                <p>{{ employee.description }}</p>
            </div>
        </div>

        <div class="employee-actions">
            <a href="{{ path('employee_detail_edit', { id: employee.id }) }}" class="button edit_button">
            </a>
            <form action="{{ path('employee_delete', { id: employee.id }) }}" method="post" style="display:inline;">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ employee.id) }}">
                <button type="submit" class="button delete_button" onclick="return confirm('Are you sure you want to delete this employee?');">
                </button>
            </form>
        </div>
    </section>
{% endblock %}
