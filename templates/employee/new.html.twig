{% extends 'layout.html.twig' %}

{% block title %}Create New Employee{% endblock %}

{% block content %}
    <div class="employee-form-container">
        <h1>Create a New Employee</h1>
        <div class="form-content">
            <div class="form-fields">
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.phone) }}
                {{ form_row(form.email) }}
                {{ form_row(form.role) }}
                {{ form_row(form.description, { 'attr': { 'class': 'large-textarea' } }) }}
                {{ form_row(form.imageFile) }}
                <button type="submit" class="form-button">Create</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
