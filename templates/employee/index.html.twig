{% extends 'layout.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/employees.css') }}" />
{% endblock %}

{% block title %}Evidence zaměstnanců - Přehled zaměstnanců{% endblock %}

{% block content %}
    <section>
        <h2>Seznam zaměstnanců</h2>
        <ul>
            {% for employee in employees %}
                <li>
                    <div class="employee-info">
                        <img src="{{ employee.image }}" alt="{{ employee.name }}" width="50">
                        <strong>{{ employee.name }}:</strong> {{ employee.role }}
                    </div>
                    <div class="employee-actions">
                        <a class="employee-action" href="{{ path('details', { 'id': employee.id }) }}">
                            <span class="icon">📄</span> Detail zaměstnance
                        </a>
                        <a class="employee-action" href="{{ path('employee_account', { 'id': employee.id }) }}">
                            <span class="icon">🔑</span> Účty zaměstnance
                        </a>
                    </div>
                </li>
            {% else %}
                <li>Žádní zaměstnanci nejsou dostupní.</li>
            {% endfor %}
        </ul>

        <div class="pagination">
            {% if currentPage > 1 %}
                <a href="{{ path('employees', { 'page': currentPage - 1 }) }}" class="pagination-button" title="Previous Page">
                    <span class="icon">⬅</span>
                </a>
            {% endif %}

            <span>Page {{ currentPage }} of {{ totalPages }}</span>

            {% if currentPage < totalPages %}
                <a href="{{ path('employees', { 'page': currentPage + 1 }) }}" class="pagination-button" title="Next Page">
                    <span class="icon">➡</span>
                </a>
            {% endif %}
        </div>

    </section>
{% endblock %}
