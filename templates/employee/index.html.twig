{% extends 'layout.html.twig' %}

{% import 'macros/pagination.html.twig' as pagination %}
{% block title %}Seznam zaměstnanců{% endblock %}

{% block content %}
    <section>
        <div class="header-with-button">
            <h2>Seznam zaměstnanců</h2>
            <a href="{{ path('employee_form') }}" class="button add-employee-button">➕ Add Employee</a>
        </div>

        <ul>
            {% for employee in employees %}
                <li>
                    <div class="employee-info">
                        <img src="{{ employee.image }}" alt="{{ employee.name }}">
                        <div class="employee-details">
                            <strong>{{ employee.name }}:</strong> {{ employee.role.title }}
                        </div>
                    </div>
                    <div class="employee-actions">
                        <a class="employee-action" href="{{ path('details', { 'id': employee.id }) }}">
                            <span class="icon">📄</span> Detail
                        </a>
                        <a class="employee-action" href="{{ path('employee_account', { 'id': employee.id }) }}">
                            <span class="icon">🔑</span> Účty
                        </a>
                        <a class="employee-action" href="{{ path('employee_form', { 'id': employee.id }) }}">
                            <span class="icon">✏️</span> Edit
                        </a>
                    </div>
                </li>
            {% else %}
                <li>Žádní zaměstnanci nejsou dostupní.</li>
            {% endfor %}
        </ul>

        <div class="pagination">
            {{ pagination.render(pagination, 'employees') }}
        </div>
    </section>
{% endblock %}
