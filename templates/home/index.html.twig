{% extends 'layout.html.twig' %}

{% block title %}Employee database - Main page{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('css/index.css') }}" />

{% endblock %}

{% block content %}
    <section>
        <h2>New employees</h2>
        <ul>
            {% for user in users %}
                <li>
                    <img src="{{ user.image }}" alt="{{ user.name }}" width="50">
                    <strong>{{ user.name }}</strong>
                </li>
            {% else %}
                <li>No users are available.</li>
            {% endfor %}
        </ul>
    </section>
{% endblock %}
